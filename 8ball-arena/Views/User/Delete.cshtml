@model _8ball_arena.Models.DeleteUserViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-transparent border-0">
                <div class="card-header bg-transparent border-0">
                    <h3 class="text-center">Delete Account</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete your account, @Model.Username?</h5>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control bg-black text-light" />
                            @if (ViewBag.PasswordError != null)
                            {
                                <div class="text-danger">@ViewBag.PasswordError</div>
                            }
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
